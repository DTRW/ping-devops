  # test -z "${CURRENT_VALUE}" && CURRENT_VALUE="${VAR_DEFAULT}"

  # echo "${VAR_PROMPT}"
  # echo -ne "    [${GREEN}${CURRENT_VALUE}${NORMAL}] ? "
