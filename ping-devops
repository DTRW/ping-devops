  [enter]     to end adding additional variables
  NAME=VALUE  to add that variable with setting
  "
  
  while true
  do
      echo -ne "Enter a new NAME=VALUE [enter to end] : "

      read answer

      test -z "${answer}" && break

      echo "$answer" >> ${PROPS_FILE}
  done


